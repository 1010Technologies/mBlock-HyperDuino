			"inc":"",
			"def":"",
			"work":"\nanalogWrite(11,0);\nanalogWrite(10,0);\ndigitalWrite(12,LOW);\ndigitalWrite(8,LOW);\ndigitalWrite(13,LOW);\ndigitalWrite(9,LOW);\n",
			"loop":""
